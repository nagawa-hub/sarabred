<header class="top-page-header">
  <div class="header-contents">
    <div class="logo-title">
      <%= link_to image_tag("logo.png", class:"logo-icon"), root_path %>
      <div class="header-title">
        営業向け顧客管理アプリ<br/>
        Sarabred
      </div>
    </div>

    <%= form_with(url: search_companies_path, method: :get, local: true, class: "search_container") do |f| %>
      <%= f.text_field :keyword, placeholder:"会社を検索する" %>
      <%= f.submit "\uF002"%>
    <% end %>
  </div>
</header>